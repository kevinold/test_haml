<h1>Editing sermon</h1>

<% form_for(@sermon) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :podcast_filename %><br />
    <%= f.text_field :podcast_filename %>
  </p>
  <p>
    <%= f.label :video_filename %><br />
    <%= f.text_field :video_filename %>
  </p>
  <p>
    <%= f.label :published %><br />
    <%= f.check_box :published %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @sermon %> |
<%= link_to 'Back', sermons_path %>